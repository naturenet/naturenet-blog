
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block header
  include author
  h1= page.title
  p.author
    | #{ "Written by " }
    mixin author(page.metadata.author)

block content
  article.article.blog_wrapper
    h1 #{page.title}
            // Start of featured text blog
            .featured_text_full
              // Start of intro
              .intro
                = page.metadata.intro
              // End of intro
    section.content!= typogr(page.html).typogrify()

